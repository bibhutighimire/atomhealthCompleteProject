@model AtomHealth.Models.Immunization

<h4>Immunization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImmunization">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImmunizationName" class="control-label"></label>
                <input asp-for="ImmunizationName" class="form-control" />
                <span asp-validation-for="ImmunizationName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isChecked" /> @Html.DisplayNameFor(model => model.isChecked)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
