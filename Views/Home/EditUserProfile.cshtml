@model AtomHealth.Areas.Identity.Data.AtomHealthUser

<script type="text/javascript" src="~/js/Phone.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/ViewProfile.css" />
@{
    ViewData["Title"] = "Edit Profile";

}
<h1 style="color:#42a5ff; font-size:large; font-weight:bold; text-align:center;">Edit Your Profile</h1>
<hr />

<div class="formWrap">


    <form method="post" action="EditUserProfile">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="ImmunizationID" />
            <input type="hidden" asp-for="MedicalHistoryID" />*@
        <input type="hidden" asp-for="Id" />

        <input type="hidden" asp-for="UserName" />
        <div class="bio-graph-heading-profile">
            Personal Details
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">
                First Name<span style="color:red">*</span>
                <input asp-for="ApplicationUser.FirstName" class="form-control" />
                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Middle Name
                <input asp-for="ApplicationUser.MiddleName" class="form-control" />
                <span asp-validation-for="ApplicationUser.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Last Name<span style="color:red">*</span>
                <input asp-for="ApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">

                Gender<span style="color:red">*</span> <i class="fa fa-question-circle" style="font-size:20px" data-toggle="tooltip" title="Please make sure the gender you provide here is the same as what your insurance provider has on file. Our entire team is commited to making
                         sure every member feels safe, welcome and respected."></i>

                <br />

                @Html.RadioButtonFor(m => m.ApplicationUser.Gender, "Male", Model.ApplicationUser.Gender == "Male" ? "checked" : string.Empty)
                <span>Male</span>
                @Html.RadioButtonFor(m => m.ApplicationUser.Gender, "Female", Model.ApplicationUser.Gender == "Female" ? "checked" : string.Empty)
                <span>Female</span>
                @Html.RadioButtonFor(m => m.ApplicationUser.Gender, "LGBTQ+", Model.ApplicationUser.Gender == "LGBTQ+" ? "checked" : string.Empty)
                <span>LGBTQ+</span>


                <span asp-validation-for="ApplicationUser.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                Marital Status<span style="color:red">*</span>
                @Html.DropDownListFor(m => m.ApplicationUser.MaritalStatus, new List<SelectListItem>

{new SelectListItem { Text = "Select Marital Status", Value = "None", Selected=true},

    new SelectListItem { Text = "Married", Value = "Married"},
    new SelectListItem { Text = "Living with partner", Value = "Living with partner"},
    new SelectListItem { Text = "Single or never married", Value = "Single"},
    new SelectListItem { Text = "Seperated", Value = "Seperated"},
    new SelectListItem { Text = "Divorced", Value = "Divorced"},
    new SelectListItem { Text = "Widowed", Value = "Widowed"}


})
                <span asp-validation-for="ApplicationUser.MaritalStatus" class="text-danger"></span>
            </div>
            <div class="dropDownTwo">
                <div class="form-group">
                    Height <span style="color:red">*</span>
                    <input asp-for="ApplicationUser.Height" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Select
                    @Html.DropDownList("ApplicationUser.HeightMeasure", new List<SelectListItem>

                    {
                                   new SelectListItem { Text = "Select ", Value = "None", Selected=true},

                        new SelectListItem { Text = "CM", Value = "CM"},
                        new SelectListItem { Text = "INCH", Value = "INCH"}
                    })
                    <span asp-validation-for="ApplicationUser.HeightMeasure" class="text-danger"></span>
                </div>
            </div>
            <div class="dropDownTwo">
                <div class="form-group">
                    Weight<span style="color:red">*</span>
                    <input asp-for="ApplicationUser.Weight" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Select

                    @Html.DropDownList("ApplicationUser.WeightMeasure", new List<SelectListItem>

                               {
                                              new SelectListItem { Text = "Select ", Value = "None", Selected=true},

                                   new SelectListItem { Text = "KG", Value = "KG"},
                                   new SelectListItem { Text = "LBS", Value = "LBS"}
                               })
                    <span asp-validation-for="ApplicationUser.HeightMeasure" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group">

                Blood Type<span style="color:red">*</span>
                @Html.DropDownList("MedicalRecord.BloodType", new List<SelectListItem>

{
               new SelectListItem { Text = "Select Blood Type", Value = "None", Selected=true},
new SelectListItem { Text = "A RhD positive (A+)", Value = "A RhD positive (A+)"},
    new SelectListItem { Text = " A RhD negative (A-)", Value = " A RhD negative (A-)"},
    new SelectListItem { Text = "B RhD positive (B+)", Value = "B RhD positive (B+)"},
    new SelectListItem { Text = "B RhD negative (B-)", Value = "B RhD negative (B-)"},
    new SelectListItem { Text = "O RhD positive (O+)", Value = "O RhD positive (O+)"},
    new SelectListItem { Text = "O RhD negative (O-)", Value = "O RhD negative (O-)"},
    new SelectListItem { Text = "AB RhD positive (AB+)", Value = "AB RhD positive (AB+)"},
    new SelectListItem { Text = "AB RhD negative (AB-)", Value = "AB RhD negative (AB-)"}
})
                <span asp-validation-for="MedicalRecord.BloodType" class="text-danger"></span>
            </div>

            <div class="form-group">
                Date of Birth<span style="color:red">*</span>
                <input asp-for="Dateofbirth.DOB" class="form-control" type="text" id="datepicker" />
                <span asp-validation-for="Dateofbirth.DOB" class="text-danger"></span>
            </div>
        </div>

        <div class="bio-graph-heading-profile">
            Address
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">
                Country<span style="color:red">*</span>
                <select asp-for="Address.Country" >
                    @foreach (Country country in ViewBag.listOfCountry)
                    {
                        <option value="@country.CountryName">
                            @country.CountryName
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                Province / State<span style="color:red">*</span>
                <select asp-for="Address.Province">
                    @foreach (Province province in ViewBag.listOfProvince)
                    {
                        <option value="@province.ProvinceName">
                            @province.ProvinceName
                        </option>
                    }
                </select>
                <span asp-validation-for="Address.Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                City<span style="color:red">*</span>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                Address Line 1<span style="color:red">*</span>
                <input asp-for="Address.AddressLineOne" class="form-control" />
                <span asp-validation-for="Address.AddressLineOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                Address Line 2
                <input asp-for="Address.AddressLineTwo" class="form-control" />
                <span asp-validation-for="Address.AddressLineTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                Postal Code<span style="color:red">*</span>
                <input asp-for="Address.PostalCode" class="form-control" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="bio-graph-heading-profile">
            Contact Details
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">
                Home Phone
                <input asp-for="Phonenumbers.HomePhone" class="form-control" placeholder="(123) 456-7890" type="text" onkeydown="javascript:backspacerDOWN(this,event);" onkeyup="javascript:backspacerUP(this,event);" />
                <span asp-validation-for="Phonenumbers.HomePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                Mobile Phone<span style="color:red">*</span>
                <input asp-for="Phonenumbers.MobilePhone" class="form-control" placeholder="(123) 456-7890" type="text" onkeydown="javascript:backspacerDOWN(this,event);" onkeyup="javascript:backspacerUP(this,event);" />
                <span asp-validation-for="Phonenumbers.MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                Emergency Contact Name
                <input asp-for="Phonenumbers.EmergencyContactName" class="form-control" />
                <span asp-validation-for="Phonenumbers.EmergencyContactName" class="text-danger"></span>
            </div>


            <div class="form-group">
                Emergency Contact Phone
                <input asp-for="Phonenumbers.EmergencyContactPhone" class="form-control" placeholder="(123) 456-7890" type="text" onkeydown="javascript:backspacerDOWN(this,event);" onkeyup="javascript:backspacerUP(this,event);" />
                <span asp-validation-for="Phonenumbers.EmergencyContactPhone" class="text-danger"></span>
            </div>


            <div class="form-group">
                Family Doctor's Name
                <input asp-for="Phonenumbers.FamilyDoctorName" class="form-control" />
                <span asp-validation-for="Phonenumbers.FamilyDoctorName" class="text-danger"></span>
            </div>
        </div>

        <div class="bio-graph-heading-profile">
            Current Medical Condition
        </div>
        <div class="rowForProfileEdit">
            <div class="checkboxarea " style="grid-column: 1 / 3">
                <div class="form-group">
                    <p>Check <span style="text-decoration:underline; font-weight:bold">ALL</span> the medical conditions that apply to you.</p>
                    <div class="checkboxfields">
                        @foreach (var item in ViewBag.currentmedicalconditions)
                        {
                            <div>
                                <input id="@item.CurrentMedicalConditionID" type="checkbox" name="CurrentMedicalConditionID" value="@item.CurrentMedicalConditionName" />
                                <label for="@item.CurrentMedicalConditionID">
                                    @item.CurrentMedicalConditionName
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                Other Medical Conditions (if other, please specify)
                @Html.TextArea("MedicalRecord.MedicalConditions", new { rows = 5, columns = 40 })
                <span asp-validation-for="MedicalRecord.MedicalConditions" class="text-danger"></span>
            </div>
        </div>

        <div class="bio-graph-heading-profile">
            Past Medical History
        </div>
        <div class="rowForProfileEdit">
            <div class="checkboxarea " style="grid-column: 1 / 3">
                <div class="form-group">

                    <p>Check <span style="text-decoration:underline; font-weight:bold">ALL</span> the medical conditions that you had in the past and recovered from.</p>
                    <div class="checkboxfields">
                        @foreach (var item in ViewBag.pastmedicalhistory)
                        {
                            <div>
                                <input id="@item.PastMedicalHistoryID" type="checkbox" name="PastMedicalHistoryID" value="@item.PastMedicalHistoryName" />
                                <label for="@item.PastMedicalHistoryID">
                                    @item.PastMedicalHistoryName
                                </label>
                            </div>

                        }
                    </div>
                </div>
            </div>


            <div class="form-group">

                Other Past Medical History (if other, please specify)
                @Html.TextArea("MedicalRecord.PastMedicalHistoryDetails", new { rows = 5, columns = 40 })

                <span asp-validation-for="MedicalRecord.PastMedicalHistoryDetails" class="text-danger"></span>
            </div>
        </div>
        <div class="bio-graph-heading-profile">
            Medications
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">

                Are you currently on any medication? <p style="color:red;">Include any Chemotherapy and Radiotherapy.)</p>
                <br />
                @Html.RadioButtonFor(m => m.MedicalRecord.IsInMedicaion, "Yes", Model.MedicalRecord.IsInMedicaion == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.MedicalRecord.IsInMedicaion, "No", Model.MedicalRecord.IsInMedicaion == "No" ? "checked" : string.Empty)
                <span>No</span>

                <span asp-validation-for="MedicalRecord.IsInMedicaion" class="text-danger"></span>
            </div>
            <div class="form-group">

                If yes, please provide a list of medications.
                @Html.TextArea("MedicalRecord.Medications", new { rows = 5, columns = 40 })

                <span asp-validation-for="MedicalRecord.Medications" class="text-danger"></span>
            </div>
        </div>

        <div class="bio-graph-heading-profile">
            Past Surgeries
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">

                Did you undergo Surgeries in the past?
                <br />
                @Html.RadioButtonFor(m => m.MedicalRecord.HasPastSurgery, "Yes", Model.MedicalRecord.HasPastSurgery == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.MedicalRecord.HasPastSurgery, "No", Model.MedicalRecord.HasPastSurgery == "No" ? "checked" : string.Empty)
                <span>No</span>

                <span asp-validation-for="MedicalRecord.HasPastSurgery" class="text-danger"></span>
            </div>
            <div class="form-group">

                If yes, what are the past surgeries that you had?
                @Html.TextArea("MedicalRecord.PastSurgeries", new { rows = 5, columns = 40 })

                <span asp-validation-for="MedicalRecord.PastSurgeries" class="text-danger"></span>
            </div>
        </div>
        <div class="bio-graph-heading-profile">
            Allergies
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">

                Do you have any allergies? <p style="color:red;">Include any medication allergies as well.</p>
                <br />
                @Html.RadioButtonFor(m => m.MedicalRecord.HasAllergy, "Yes", Model.MedicalRecord.HasAllergy == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.MedicalRecord.HasAllergy, "No", Model.MedicalRecord.HasAllergy == "No" ? "checked" : string.Empty)
                <span>No</span>
                @Html.RadioButtonFor(m => m.MedicalRecord.HasAllergy, "NotSure", Model.MedicalRecord.HasAllergy == "NotSure" ? "checked" : string.Empty)
                <span>Not Sure</span>

                <span asp-validation-for="MedicalRecord.HasAllergy" class="text-danger"></span>
            </div>
            <div class="form-group">

                If yes, please list all the allergies you have.
                @Html.TextArea("MedicalRecord.Allergies", new { rows = 5, columns = 40 })

                <span asp-validation-for="MedicalRecord.Allergies" class="text-danger"></span>
            </div>
        </div>
        <div class="bio-graph-heading-profile">
            Family Medical History
        </div>
        <div class="rowForProfileEdit">

            <div class="checkboxarea " style="grid-column: 1 / 3">
                <div class="form-group">
                    <p>Check <span style="text-decoration:underline; font-weight:bold">ALL</span> the medical conditions that run in your family.</p>

                    <div class="checkboxfields">
                        @foreach (var item in ViewBag.familyMedicalHistory)
                        {
                            <div>
                                <input id="@item.FamilyMedicalHistoryID" type="checkbox" name="FamilyMedicalHistoryID" value="@item.FamilyMedicalHistoryName" />
                                <label for="@item.FamilyMedicalHistoryID">
                                    @item.FamilyMedicalHistoryName
                                </label>
                            </div>

                        }
                    </div>
                </div>
            </div>


            <div class="form-group">

                Other Family medical history (if other, please specify)
                @Html.TextArea("MedicalRecord.FamilyHistory", new { rows = 5, columns = 40 })


                <span asp-validation-for="MedicalRecord.FamilyHistory" class="text-danger"></span>
            </div>
        </div>
        <div class="bio-graph-heading-profile">
            Genetics Profile
        </div>
        <div class="rowForProfileEdit">
            <div class="form-group">

                Have you done any genetics test?
                <br />
                @Html.RadioButtonFor(m => m.MedicalRecord.hasGeneticTest, "Yes", Model.MedicalRecord.hasGeneticTest == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.MedicalRecord.hasGeneticTest, "No", Model.MedicalRecord.hasGeneticTest == "No" ? "checked" : string.Empty)
                <span>No</span>
                <span asp-validation-for="MedicalRecord.hasGeneticTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                If yes, please provide details on the test outcomes or any highlighted risks.
                @Html.TextArea("MedicalRecord.GeneticTest", new { rows = 5, columns = 40 })
                <span asp-validation-for="MedicalRecord.GeneticTest" class="text-danger"></span>
            </div>
        </div>

        <div class="bio-graph-heading-profile">
            Lifestyle
        </div>
        <div class="rowForProfileEdit">

            <div class="form-group">

                Do you use or do you have history of smoking or using tobacco?
                <br />
                @Html.RadioButtonFor(m => m.Lifestyle.doYouSmoke, "Yes", Model.Lifestyle.doYouSmoke == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.Lifestyle.doYouSmoke, "No", Model.Lifestyle.doYouSmoke == "No" ? "checked" : string.Empty)
                <span>No</span>
                @Html.RadioButtonFor(m => m.Lifestyle.doYouSmoke, "Sometimes", Model.Lifestyle.doYouSmoke == "Sometimes" ? "checked" : string.Empty)
                <span>Sometimes</span>
                <span asp-validation-for="Lifestyle.doYouSmoke" class="text-danger"></span>
            </div>

            <div class="form-group">

                Do you use or do you have history of using illegal drugs?
                <br />
                @Html.RadioButtonFor(m => m.Lifestyle.doYouIllegalDrugs, "Yes", Model.Lifestyle.doYouIllegalDrugs == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.Lifestyle.doYouIllegalDrugs, "No", Model.Lifestyle.doYouIllegalDrugs == "No" ? "checked" : string.Empty)
                <span>No</span>
                @Html.RadioButtonFor(m => m.Lifestyle.doYouIllegalDrugs, "Sometimes", Model.Lifestyle.doYouIllegalDrugs == "Sometimes" ? "checked" : string.Empty)
                <span>Sometimes</span>
                <span asp-validation-for="Lifestyle.doYouIllegalDrugs" class="text-danger"></span>
            </div>

            <div class="form-group">

                Do you use or do you have history of consuming alcohol?
                <br />
                @Html.RadioButtonFor(m => m.Lifestyle.doYouConsumeAlcohol, "Yes", Model.Lifestyle.doYouConsumeAlcohol == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.Lifestyle.doYouConsumeAlcohol, "No", Model.Lifestyle.doYouConsumeAlcohol == "No" ? "checked" : string.Empty)
                <span>No</span>
                @Html.RadioButtonFor(m => m.Lifestyle.doYouConsumeAlcohol, "Sometimes", Model.Lifestyle.doYouConsumeAlcohol == "Sometimes" ? "checked" : string.Empty)
                <span>Sometimes</span>
                <span asp-validation-for="Lifestyle.doYouConsumeAlcohol" class="text-danger"></span>
            </div>
            <div class="form-group">

                Do you follow any specific diet?

                @Html.DropDownListFor(m => m.Lifestyle.Diet, new List<SelectListItem>
{   new SelectListItem { Text = "Select Diet Plan", Value = "NotSelected"},
    new SelectListItem { Text = "The Paleo Diet", Value = "The Paleo Diet"},
    new SelectListItem { Text = "The Blood Type Diet", Value = "The Blood Type Diet"},
    new SelectListItem { Text = "The Vegan Diet", Value = "The Vegan Diet"},
    new SelectListItem { Text = "The South Beach Diet", Value = "The South Beach Diet"},
    new SelectListItem { Text = "The Mediterranean Diet", Value = "The Mediterranean Diet"},
    new SelectListItem { Text = "Raw Food Diet", Value = "Raw Food Diet"},
      new SelectListItem { Text = "The Zone Diet", Value = "The Zone Diet"},
    new SelectListItem { Text = "The Keto Diet", Value = "The Keto Diet"},
    new SelectListItem { Text = "Low-Carb Diets", Value = "Low-Carb Diets"},
    new SelectListItem { Text = "The Ultra-Low-Fat Diet", Value = "The Ultra-Low-Fat Diet"},
    new SelectListItem { Text = "The Dukan Diet", Value = "The Dukan Diet"},
    new SelectListItem { Text = "The Atkins Diet", Value = "The Atkins Diet"},
      new SelectListItem { Text = "The HCG Diet", Value = "The HCG Diet"},
    new SelectListItem { Text = "Intermittent Fasting", Value = "Intermittent Fasting"},
    new SelectListItem { Text = "Flexitarian or Semi-Vegetarian Diet", Value = "Flexitarian or Semi-Vegetarian Diet"},
    new SelectListItem { Text = "Cleanse Diets", Value = "Cleanse Diets"},
    new SelectListItem { Text = "Whole30", Value = "Whole30"},
    new SelectListItem { Text = "Carnivore Diet", Value = "Carnivore Diet"}


})
                <span asp-validation-for="Lifestyle.Diet" class="text-danger"></span>
            </div>
            <div class="form-group">
                How often do you exercise?
                @Html.DropDownListFor(m => m.Lifestyle.Exercise, new List<SelectListItem>
{new SelectListItem { Text = "Select Exercise Level", Value = "NotSelected"},
    new SelectListItem { Text = "Sedentary: little or no exercise", Value = "Sedentary: little or no exercise"},
    new SelectListItem { Text = "Light: exercise 1-3 times/week", Value = "Light: exercise 1-3 times/week"},
    new SelectListItem { Text = "Moderate: exercise 4-5 times/week", Value = "Moderate: exercise 4-5 times/week"},
    new SelectListItem { Text = "Active: daily exercise or intense exercise 3-4 times/week", Value = "Active: daily exercise or intense exercise 3-4 times/week"},
    new SelectListItem { Text = "Very Active: intense exercise 6-7 times/week", Value = "Very Active: intense exercise 6-7 times/week"},
    new SelectListItem { Text = "Extra Active: very intense exercise daily, or physical job", Value = "Extra Active: very intense exercise daily, or physical job"}

})
                <span asp-validation-for="Lifestyle.Exercise" class="text-danger"></span>
            </div>
        </div>
        <div class="bio-graph-heading-profile">
            COVID History
        </div>
        <div class="rowForProfileEdit">



            <div class="checkboxarea " style="grid-column: 1 / 3">
                <div class="form-group">
                    <p> Have you been diagnosed with COVID in the past?</p>

                    <div class="checkboxfields">
                        @foreach (var item in ViewBag.CovidHistory)
                        {
                            <div>
                                <input id="@item.CovidHistoryID" type="checkbox" name="CovidHistoryID" value="@item.CovidHistoryName" />
                                <label for="@item.CovidHistoryID">
                                    @item.CovidHistoryName
                                </label>
                            </div>

                        }
                    </div>
                </div>
            </div>
            
        </div>
        <div class="bio-graph-heading-profile">
            Immunization Record
        </div>
        <div class="rowForProfileEdit">
            <div class="checkboxarea " style="grid-column: 1 / 3">
                <div class="form-group">
                    <p>Check <span style="text-decoration:underline; font-weight:bold">ALL</span> the vaccines that you are up to date with.</p>

                    <div class="checkboxfields">
                        @foreach (var item in ViewBag.immunization)
                        {
                            <div>
                                <input id="@item.ImmunizationID" type="checkbox" name="ImmunizationID" value="@item.ImmunizationName" />
                                <label for="@item.ImmunizationID">
                                    @item.ImmunizationName
                                </label>
                            </div>

                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                Other Immunization (if other, please specify)
                <input asp-for="MedicalRecord.ImmunizationRecord" class="form-control" />
                <span asp-validation-for="MedicalRecord.ImmunizationRecord" class="text-danger"></span>
            </div>

        </div>
        @*@Html.HiddenFor(model => model.ImmunizationID)
            @Html.HiddenFor(model => model.MedicalHistoryID)
            @Html.HiddenFor(model => model.CovidHistoryID)
            @Html.HiddenFor(model => model.CurrentMedicalConditionID)
            @Html.HiddenFor(model => model.PastMedicalHistoryID)
            @Html.HiddenFor(model => model.FamilyMedicalHistoryID)*@


        <hr />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" onclick="updatemark()" />

        </div>

    </form>
    <div><a class="btn btn-primary" asp-route-id="@ViewBag.userid" asp-action="UserProfile"> Go Back</a></div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $("#datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                maxDate: "today",
                yearRange: "1900:+nn"

            });
        });
