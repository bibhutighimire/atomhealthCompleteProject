@model AtomHealth.Models.CurrentMedicalCondition

<h4>Add Your Current Medical Condition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CurrentMedicalCondition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentMedicalConditionName" class="control-label"></label>
                <input asp-for="CurrentMedicalConditionName" class="form-control" />
                <span asp-validation-for="CurrentMedicalConditionName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isChecked" /> @Html.DisplayNameFor(model => model.isChecked)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
