@model AtomHealth.Models.Atom
    <link rel="stylesheet" href="~/css/site.css" />
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_LayoutWithoutBanner.cshtml";
}

    <h1 style="color:#42a5ff; font-size:large; font-weight:bold; text-align:center;">Edit Your Profile</h1>
<hr />
<div class="formWrap">
    <div class="rowForProfileEdit">
       
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="atomid" />

            <div class="form-group">
                First Name
                <input asp-for="firstname" class="form-control" />
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
               Middle Name
                <input asp-for="middlename" class="form-control" />
                <span asp-validation-for="middlename" class="text-danger"></span>
            </div>
            <div class="form-group">
                Last Name
                <input asp-for="lastname" class="form-control" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                Date of Birth
                <input asp-for="dob" class="form-control" type="date" />
                <span asp-validation-for="dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                Health ID
                <input asp-for="healthid" class="form-control" />
                <span asp-validation-for="healthid" class="text-danger"></span>
            </div>
            <div class="form-group">
               Phone Number
                <input asp-for="phone" class="form-control" type="tel" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="sex" class="control-label">Gender</label>
                <br />
                @Html.RadioButtonFor(m => m.sex, "Male", Model.sex == "Male" ? "checked" : string.Empty)
            <span>Male</span>
                @Html.RadioButtonFor(m => m.sex, "Female", Model.sex == "Female" ? "checked" : string.Empty)
            <span>Female</span>
              
                <span asp-validation-for="sex" class="text-danger"></span>
            </div>
            <div class="form-group">
               Height
                <input asp-for="height" class="form-control" />
                <span asp-validation-for="height" class="text-danger"></span>
            </div>
            <div class="form-group">
               Weight
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="ismarried" class="control-label">Status</label>
                <br />
                @Html.RadioButtonFor(m => m.ismarried, "Married", Model.ismarried == "Married" ? "checked" : string.Empty)
                <span>Married</span>
                @Html.RadioButtonFor(m => m.ismarried, "Unmarried", Model.ismarried == "Unmarried" ? "checked" : string.Empty)
                <span>Unmarried</span>
                @Html.RadioButtonFor(m => m.ismarried, "Single", Model.ismarried == "Single" ? "checked" : string.Empty)
            <span>Single</span>
                @*@Html.RadioButtonFor(m => m.ismarried, "Divorced", Model.ismarried == "Divorced" ? "checked" : string.Empty)
        <span>Divorced</span>
            @Html.RadioButtonFor(m => m.ismarried, "Widowed", Model.ismarried == "Widowed" ? "checked" : string.Empty)
        <span>Widowed</span>*@


                <span asp-validation-for="ismarried" class="text-danger"></span>
            </div>
            <div class="form-group">
               Emergency Phone Number
                <input asp-for="emergencyphone" class="form-control" type="tel" />
                <span asp-validation-for="emergencyphone" class="text-danger"></span>
            </div>
            <div class="form-group">
               Relationship with emergency contact
                <input asp-for="relationship" class="form-control" />
                <span asp-validation-for="relationship" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="inmedicationnow" class="control-label">In Medication Now?</label>
                <br />
                @Html.RadioButtonFor(m => m.inmedicationnow, "Yes", Model.inmedicationnow == "Yes" ? "checked" : string.Empty)
                <span>Yes</span>
                @Html.RadioButtonFor(m => m.inmedicationnow, "No", Model.inmedicationnow == "No" ? "checked" : string.Empty)
                <span>No</span>
              
                <span asp-validation-for="inmedicationnow" class="text-danger"></span>
            </div>
            <div class="form-group">
               Medication
                @Html.TextArea("medication", new { rows = 5, columns = 40 })
                <span asp-validation-for="medication" class="text-danger"></span>
            </div>
            <div class="form-group">
               Diseases
                @Html.TextArea("diseases", new { rows = 5, columns = 40 })
                <span asp-validation-for="diseases" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
               
            </div>

        </form>
    <div><a class="btn btn-primary" asp-controller="Atom" asp-route-id="@ViewBag.atomid" asp-action="Profile"> Go Back</a></div>
    </div>
</div>


